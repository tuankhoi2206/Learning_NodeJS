general-color = #2c3e50
general-line-height = 2.8rem
.wrapper-room
  width 45rem
  position absolute
  top 4rem
  height 40rem
  background-color #f5f5f5
  .left-panel
    width 16rem
    float left
    background-color general-color
    color #F5F5F5
    height 100%
    text-align center
    .box
      margin-top 1.3rem
      display flex
      justify-content center
      input#search
        width 10rem
        padding 15px 0 15px 20px
        border 0 none
        height general-line-height
        margin-right 0
        color white
        outline none
        background #32465a
        float left
        box-sizing border-box
        transition all 0.15s
        &::placeholder
          color white
          text-overflow ellipsis
      #searchButton
        border 0 none
        background #32465a url(https://designmodo.com/demo/dropdown-menu-search/search.png) center no-repeat
        width 60px
        float left
        padding 0
        text-align center
        height general-line-height
        cursor pointer
    ul.group-contact
      list-style-type none
      padding 0px
      background-color #32465a
      li
        display inline-block
        width 4.5rem
        line-height general-line-height
        text-align center
        &:hover
          background-color #4f5b66
          cursor pointer
        //&:active
        //  border-bottom 2px solid #435f7a
  .right-panel
    width 70%
    float left
    background-color #F5F5F5
    height 100%
