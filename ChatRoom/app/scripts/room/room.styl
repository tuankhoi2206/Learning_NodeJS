general-color = #2c3e50
general-line-height = 3.8rem
.wrapper-room
  width 64rem
  position absolute
  top 4rem
  height 56rem
  background-color #f5f5f5
  .left-panel
    width 22rem
    float left
    background-color general-color
    color #F5F5F5
    height 100%
    text-align center
    .mini-profile
      margin-top 1.3rem
      margin-left 1rem
      margin-right 1rem
      .image-user
        float left
        height 4rem
        width 4rem
        border-radius 50%
        background-color white
      .infor
        float left
        text-align left
        margin-left 0.8rem
        p
          margin 0px
        p.name
          font-size 14px
          font-weight 600
    .box
      margin-top 1rem
      display flex
      justify-content center
      input#search
        font-size 1.4rem
        width 14rem
        padding 1.5rem 0 1.5rem 2rem
        border 0 none
        height general-line-height
        margin-right 0
        color white
        outline none
        background #32465a
        float left
        box-sizing border-box
        transition all 0.15s
        &::placeholder
          color white
          text-overflow ellipsis
      #searchButton
        border 0 none
        background #32465a url(https://designmodo.com/demo/dropdown-menu-search/search.png) center no-repeat
        width 60px
        float left
        padding 1.5rem
        text-align center
        height general-line-height
        cursor pointer
    ul.group-contact
      list-style-type none
      margin 1rem 0 1rem 0
      padding 0px
      background-color #32465a
      li
        display inline-block
        width 5.5rem
        line-height general-line-height
        text-align center
        &:hover
          background-color #4f5b66
          cursor pointer
  //&:active
  //  border-bottom 2px solid #435f7a
  .right-panel
    width 70%
    float left
    background-color #F5F5F5
    height 100%
