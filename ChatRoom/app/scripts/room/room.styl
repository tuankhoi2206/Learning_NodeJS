.wrapper-room
  width 45rem
  position absolute
  top 4rem
  height 40rem
  .left-panel
    width 16rem
    float left
    background-color #000000
    color #F5F5F5
    height 100%
    text-align center
    .box
      margin-top 1.3rem
      display flex
      justify-content center
      input#search
        width 10rem
        padding 15px 0 15px 20px
        border 0 none
        height 40px
        margin-right 0
        color white
        outline none
        background #1f7f5c
        float left
        box-sizing border-box
        transition all 0.15s
        &::placeholder
          color white
          text-overflow ellipsis
      #searchButton
        border 0 none
        background #1f7f5c url(https://designmodo.com/demo/dropdown-menu-search/search.png) center no-repeat
        width 60px
        float left
        padding 0
        text-align center
        height 40px
        cursor pointer
  .right-panel
    width 70%
    float left
    background-color #F5F5F5
    height 100%
